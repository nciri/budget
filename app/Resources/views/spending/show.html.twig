{% extends 'base.html.twig' %}

{% block body %}
    <h1>Spending</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ spending.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ spending.title }}</td>
            </tr>
            <tr>
                <th>Spendingdate</th>
                <td>{% if spending.spendingDate %}{{ spending.spendingDate|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ spending.amount }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('spending_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('spending_edit', { 'id': spending.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
